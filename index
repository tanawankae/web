    <script>
        function showTab(tabName) {
            // ซ่อนเนื้อหาทั้งหมด
            const tabContents = document.querySelectorAll('.tab-content');
            tabContents.forEach(content => {
                content.classList.remove('active');
                // เพิ่มเนื้อหาใน tab-content ให้มี padding
            document.querySelectorAll('.tab-content').forEach(content => {
                content.style.padding = '30px';
            });
        });

            // ลบคลาส active จากแท็บทั้งหมด
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
                tab.classList.remove('active');
            });

            // แสดงเนื้อหาที่เลือก
            document.getElementById(tabName).classList.add('active');
            
            // เพิ่มคลาส active ให้แท็บที่เลือก
            event.target.classList.add('active');
        }

        // เพิ่มเอฟเฟกต์การโหลด
        window.addEventListener('load', function() {
            const cards = document.querySelectorAll('.card, .stat-card');
            cards.forEach((card, index) => {
                setTimeout(() => {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    card.style.transition = 'all 0.6s ease';
                    
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100);
                }, index * 100);
            });
        });

        // เอฟเฟกต์ Parallax เบาๆ
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const header = document.querySelector('.header');
            header.style.transform = `translateY(${scrolled * 0.1}px)`;
        });

        // เอฟเฟกต์เมื่อ hover ที่การ์ด
        document.querySelectorAll('.stat-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // ฟังก์ชันแสดงข้อมูลเพิ่มเติมเมื่อคลิก
        document.querySelectorAll('.metric').forEach(metric => {
            metric.addEventListener('click', function() {
                this.style.backgroundColor = 'rgba(102, 126, 234, 0.1)';
                setTimeout(() => {
                    this.style.backgroundColor = 'transparent';
                }, 300);
            });
        });
    </script>
